# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Database credentials
DB_USER=jobber
DB_PASSWORD=your-secure-password-here
DB_NAME=jobber

# Redis (leave empty for no password)
REDIS_PASSWORD=

# JWT Secrets - CHANGE THESE! Use long random strings
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-secret-key-change-in-production-use-random-string
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-use-random-string

# Server environment
SERVER_ENV=development
LOG_LEVEL=debug

# S3 Storage - Hetzner Object Storage (NOT managed by Terraform)
# Get these from your Hetzner Object Storage console
S3_ENDPOINT=https://nbg1.your-objectstorage.com
S3_BUCKET=jobber-resumes
S3_REGION=eu-central
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here

# Frontend API URL (for development)
# On the server, this will be the server's public IP
VITE_API_BASE_URL=http://localhost:8080/api/v1
